{
	"compilerOptions": {
		"target":                           "es5",
		"lib":                              [
			"es6"
		],
		"experimentalDecorators":           true,
		"emitDecoratorMetadata":            true,
		"module":                           "commonjs",
		"baseUrl":                          "./src",
		"rootDir":                          "./src",
		"outDir":                           "./lib",
		"moduleResolution":                 "node",
		"sourceMap":                        true,
		"sourceRoot":                       "./src",
		"esModuleInterop":                  true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           false,
		"skipLibCheck":                     true
	}
}
